}


\newcommand{\mychapterstar}[2]{%
\cleardoublepage%
\renewcommand{\chaptername}{#1}%
\fancyhead[LE]{\small\thepage}%
\fancyhead[RE]{{\footnotesize\it\booknamecaps}}%
\fancyhead[LO]{{\footnotesize\it #2}}%
\fancyhead[RO]{{\small\thepage}}%
\thispagestyle{plain}%
\vspace*{0.25in}%
{\hfill{\Huge\bf #1}}
\vspace*{0.5in}%
}

\newcommand{\mysection}[1]{%
